# My polybar config

; -- COLORS
[colors]
bg = #000000
fg = #dfdfdf
color-1 = #399cbd
color-2 = #e60053


[bar/mainbar]
monitor = ${env:MONITOR:}
width = 100%
height = 24
fixed-center = true
background = ${colors.bg}
foreground = ${colors.fg}

line-size = 2
line-color = #0000ff

border-color = ${colors.bg}
padding = 2
module-margin-left = 1
module-margin-right = 1

font-0 = "Hack:pixelsize=10:style=Regular:antialias=true;1"

modules-left = bspwm
wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

enable-ipc = true
override-redirect = false

modules-right = battery backlight-acpi pulseaudio date
tray-position = right
tray-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.bg}
label-focused-underline= ${colors.color-1}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-empty = %index%
label-empty-foreground = #808080
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = "Bri:"

bar-width = 10
bar-indicator = >
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.color-1}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = #808080

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = amdgpu_bl0

[module/date]
type = internal/date
interval = 1

date = %d.%m.%Y
time = %H:%M

format-prefix =
format-prefix-foreground = ${colors.color-2}
format-underline = ${colors.color-1}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = "Vol: %percentage%%"

label-muted = muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.color-1}
bar-volume-foreground-1 = ${colors.color-1}
bar-volume-foreground-2 = ${colors.color-1}
bar-volume-foreground-3 = ${colors.color-1}
bar-volume-foreground-4 = ${colors.color-1}
bar-volume-foreground-5 = ${colors.color-1}
bar-volume-foreground-6 = ${colors.color-1}
bar-volume-gradient = false
bar-volume-indicator = >
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = #808080

[module/battery]
type = internal/battery
battery = BATT
adapter = ACAD
full-at = 98

format-charging = "<label-charging>"
format-charging-underline = #FFFF00

format-discharging = "<label-discharging>"
format-discharging-underline = #FF0000 # Red

format-full = "Full"
format-full-underline = #00FF00 # Green

[global/wm]
margin-top = 0
margin-bottom = 0
