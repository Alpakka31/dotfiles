[colors]
background = #000000
foreground = #FFFFFF
color1 = #597fab
color2 = #4c5661

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 22
radius = 0.0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #000000

padding-left = 1
padding-right = 1

module-margin-left = 2
module-margin-right = 2

font-0 = "Hack:pixelsize=10;2"
font-1 = "FiraCode Nerd Font Mono:pixelsize=22;4"

modules-left = bspwm
;modules-right = mpd pulseaudio wlan eth battery backlight date
modules-right = mpd pacman-updates pulseaudio wlan eth battery date powermenu

tray-position = right
tray-padding = 2

wm-restack = bspwm
override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer

enable-ipc = true
pseudo-transparency = false


[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = true
fuzzy-match = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-default = 

format = <label-state> <label-mode>

label-monitor = %name%

label-focused = %icon%
label-focused-foreground = ${colors.color1}
label-focused-background = ${colors.background}
label-focused-padding = 2
label-focused-underline = ${colors.color1}

label-occupied = %icon%
label-occupied-background = ${colors.background}
label-occupied-foreground = ${colors.color1}
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-padding = 2

label-empty = %icon%
label-empty-padding = 2
label-empty-foreground = ${colors.color1}

label-separator = |
label-separator-foreground = ${colors.color2}

[module/mpd]
type = internal/mpd

