#!/bin/bash

case "$1" in
	python)
		echo "Rebuilding Python packages"
		pyver="${2}"
		[ -z "${pyver}" ] && echo "No version given" && exit 1
		[ ! -d "/usr/lib/python${pyver}" ] && echo "No packages to rebuild from that version" && exit 1

		paru -S $(pacman -Qoq /usr/lib/python${pyver}) --rebuild
		;;
	*)
		echo "What do you mean?"
		echo -e "Possible choices:
\tpython [version]"
		;;
esac
